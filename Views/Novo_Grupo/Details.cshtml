@model NextConta.Models.Novo_Grupo

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Grupo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
           Valor Inteiro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorInt)
        </dd>
        <dt class = "col-sm-2">
            Quantidade de Telas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QtdTelas)
        </dd>
        <dt class = "col-sm-2">
            Telas Disponiveis
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelasDisponiveis)
        </dd>
        <dt class = "col-sm-2">
           Valor por pessoa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorPessoa)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
