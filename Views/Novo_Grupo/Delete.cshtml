@model NextConta.Models.Novo_Grupo

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir esse grupo?</h3>>
<div>
    <h4>Grupo</h4>
    
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class = "col-sm-2">
           Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
           Valor Inteiro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorInt)
        </dd>
        <dt class = "col-sm-2">
           Quantidade de Telas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QtdTelas)
        </dd>
        <dt class = "col-sm-2">
            Telas Disponiveis
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelasDisponiveis)
        </dd>
        <dt class = "col-sm-2">
           Valor por pessoa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorPessoa)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
